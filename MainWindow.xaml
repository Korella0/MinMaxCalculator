<Window x:Class="MinMaxCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinMaxCalculator"
        mc:Ignorable="d"
       Title="ПР9" Height="300" Width="600" Background="GhostWhite">
    <Grid>
        <Button BorderBrush="LightSkyBlue" BorderThickness="2" FontSize="14" Background="AliceBlue" Content="Вычислить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="20" Click="Calculate_Click"/>
        <Label Margin="10,60,10,160" Content="Результат:" FontSize="14"/>
        <Border Background="AliceBlue" BorderThickness="3" BorderBrush="LightSkyBlue" Margin="15,85">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontWeight="Bold" Margin="0,20,0,10"/>
            <TextBlock x:Name="ResultText" Text="" TextWrapping="Wrap" HorizontalAlignment="Center" Width="550" TextAlignment="Center"/>
        </StackPanel>
        </Border>
        <Border BorderThickness="3" Background="AliceBlue" BorderBrush="LightSkyBlue" Margin="15,200,15,30">
            <TextBlock x:Name="ResultF" Text="F(X,Y,Z)=sin(x)+cos(y)+tan(z)" FontSize="15"/>
        </Border>
    </Grid>
</Window>
